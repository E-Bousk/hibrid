{% extends 'base.html.twig' %}

{% block title 'Créer un compte' %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-error rounded mb-3" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="my-5 text-center">Créer un compte</h1>

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {# {{ form_start(registrationForm) }} #}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(registrationForm.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.lastName) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(registrationForm.telephone1) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.telephone2) }}
                </div>
            </div>
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}

            <button type="submit" class="mt-3 btn btn-primary w-100">Inscription</button>
        {{ form_end(registrationForm) }}
        <p class="mt-5 mb-3 text-center text-muted">
            Dejà un compte ? <a href="{{ path('security_login') }}">Connectez-vous</a>
        </p>
    </div>
</div>



