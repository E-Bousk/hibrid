{% extends 'base.html.twig' %}

{% block title 'Créer un compte' %}

{% block javascripts %}
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/randomBackground.js"></script>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="my-5 py-1 h4 text-center card text-white bg-primary">Créer un compte</h1>
        
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="mb-3 alert alert-error rounded" role="alert">{{ flashError }}</div>
        {% endfor %}

        <div class="px-2 pb-3 rounded surrounding">
            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
            {# {{ form_start(registrationForm) }} #}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(registrationForm.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.lastName) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(registrationForm.telephone1) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.telephone2) }}
                </div>
            </div>
            <div class="row">
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
            </div>
        </div>
        <button type="submit" class="mt-3 btn btn-success w-100">Inscription</button>
        {{ form_end(registrationForm) }}
        <p class="my-5 text-center rounded surrounding">Dejà un compte ?
            <a class="ms-3 surroundingLink" href="{{ path('security_login') }}">Connectez&#8209;vous</a>
        </p>
    </div>
</div>



