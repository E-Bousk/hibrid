{% extends 'base.html.twig' %}

{% block title 'Modification du mot de passe' %}

{% block javascripts %}
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/randomBackground.js"></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 py-1 h4 text-center card text-white bg-primary">Modifier votre mot de passe</h1>
            
            {{ form_start(pswChangeForm) }}
                <div class="px-2 pb-3 rounded surrounding">
                    {{ form_widget(pswChangeForm) }}
                </div>
                <button type="submit" class="mt-3 btn btn-success w-100">Confirmer</button>
            {{ form_end(pswChangeForm) }}
        </div>
    </div>
{% endblock %}

