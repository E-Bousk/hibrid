{% extends 'base.html.twig' %}

{% block title 'Connexion' %}

{% block javascripts %}
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/randomBackground.js"></script>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="my-5 py-1 h4 text-center card text-white bg-primary">Connexion</h1>

        {% if error %}
            <div class="mb-3 alert alert-error rounded">{{ error.message }}</div>
        {% endif %}

        <div class="px-2 pb-3 rounded surrounding">
            {{ form_start(formView) }}
            {{ form_row(formView.email) }}
            {{ form_row(formView.password) }}
        </div>
        
        <button type="submit" class="mt-3 btn btn-success w-100">Connexion</button>
        {{ form_end(formView) }}
        <p class="my-5 text-center rounded surrounding">Vous n'avez pas de compte ?
            <a class="ms-3 surroundingLink" href="{{ path('app_register') }}">Cr√©ez&#8209;en&nbsp;un&nbsp;ici</a>
        </p>
    </div>
</div>
{% endblock %}
