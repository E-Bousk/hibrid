{% extends 'base.html.twig' %}

{% block title 'Login' %}

{% block stylesheets %}
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
	<link rel="stylesheet" href="assets/css/loginpage.css">
{% endblock %}

{% block body %}
<div class="row">

    <div class="mt-5 col-4 d-flex align-items-center">
        <img src="/assets/img/LOGO_SYNERGIN.png" alt="logo">
    </div>
    
    <div class="col-8">

        <h1 class="mt-5">Connexion</h1>

        {# show error message if exist #}
        {% if error %}
            <div class="alert alert-danger">
                {{ error.message }}
                {# {{ error.messageKey | trans(error.messagedata, 'messages') }} #}
            </div>
        {% endif %}

        {# show the form #}
        {{ form_start(formView) }}
        {{ form_widget(formView) }}
            <button type="submit" class="mt-3 btn btn-success">Connexion</button>
        {{ form_end(formView) }}

    </div>
</div>
{% endblock %}
