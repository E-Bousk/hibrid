{% extends 'base.html.twig' %}

{% block title 'Connexion' %}

{% block stylesheets %}
	<link rel="stylesheet" href="assets/css/loginpage.css">
{% endblock %}

{% block body %}
<div class="row">

    <div class="mt-5 col-4 col-md-3 d-flex align-items-center">
        <img src="/assets/img/LOGO_SYNERGIN.png" alt="logo">
    </div>
    
    <div class="col-8 col-md-6">

        <h1 class="mt-5 mb-3">Connexion</h1>

        {# show error message if exist #}
        {% if error %}
            <div class="alert alert-error rounded mb-3">
                {{ error.message }}
                {# {{ error.messageKey | trans(error.messagedata, 'messages') }} #}
            </div>
        {% endif %}

        {# show the form #}
        {{ form_start(formView) }}
        {{ form_widget(formView) }}
            <button type="submit" class="mt-3 btn btn-success w-100">Connexion</button>
        {{ form_end(formView) }}
            <p class="mt-4 mb-3 text-center text-muted">Vous n'avez pas de compte ?
                <a href="{{ path('app_register') }}">Cr√©ez&#8209;en&nbsp;un&nbsp;ici</a>
            </p>
    </div>
</div>
{% endblock %}
