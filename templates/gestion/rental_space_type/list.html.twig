{% extends 'base.html.twig' %}

{% block title "Listing des types d'espace locatif" %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ path('homepage') }}assets/css/dataTables.bootstrap5.min.css">
	<link rel="stylesheet" href="{{ path('homepage') }}assets/css/gestionDataTable.css">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/gestionDataTable.js"></script>
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/randomBackground.js"></script>

{% endblock %}

{% block body %}
    <h1 class="my-5 h4"><span class="px-3 py-2 rounded text-white bg-primary">Listing des types d'espace locatif</span></h1>
    <div class="px-2 pb-2 rounded surrounding">
        <table id="RentalSpaceTypeDataTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Type d'espace</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for rental_space_type in rental_space_types %}
                <tr>
                    <td>{{ rental_space_type.designation }}</td>
                    <td>
                        <a href="{{ path('rental_space_type_edit', {'id': rental_space_type.id}) }}"><i class="far fa-2x fa-edit"></i></a>
                        <a href="{{ path('rental_space_type_delete', {'id': rental_space_type.id}) }}"><i class="far fa-2x fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="mt-3 gap">
        <a class="btn btn-success" href="{{ path('rental_space_type_add') }}"><i class="fas fa-plus-circle"></i> Ajouter un nouveau type d'espace locatif</a>
    </div>
{% endblock %}