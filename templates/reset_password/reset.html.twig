{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ path('homepage') }}assets/js/randomBackground.js"></script>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="my-5 py-1 h4 text-center card text-white bg-primary">
            Réinitialisez votre mot de passe
        </h1>
        {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="px-2 pb-3 rounded surrounding">
                {{ form_row(resetForm.plainPassword) }}
            </div>
            <button class="mt-3 btn btn-primary w-100">
                Réinitialiser le mot de passe
            </button>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
